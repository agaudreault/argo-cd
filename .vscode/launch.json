{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug controller",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "./cmd",
            "env": {
                "ARGOCD_BINARY_NAME": "argocd-application-controller",
                "FORCE_LOG_COLORS": "1",
                "ARGOCD_FAKE_IN_CLUSTER": "true",
                "ARGOCD_TLS_DATA_PATH": "/tmp/argocd-local/tls",
                "ARGOCD_SSH_DATA_PATH": "/tmp/argocd-local/ssh",
            },
            "args": [
                "--loglevel",
                "debug",
                "--redis",
                "localhost:6379",
                "--repo-server",
                "localhost:8081",
                "--otlp-address=''",
                "--application-namespaces=''",
                "--app-resync",
                "180",
                "--app-resync-jitter",
                "20",
            ],
        },
        {
            "name": "Debug server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "./cmd",
            "env": {
                "ARGOCD_BINARY_NAME": "argocd-server",
                "FORCE_LOG_COLORS": "2",
                "ARGOCD_FAKE_IN_CLUSTER": "true",
                "ARGOCD_TLS_DATA_PATH": "/tmp/argocd-local/tls",
                "ARGOCD_SSH_DATA_PATH": "/tmp/argocd-local/ssh",
            },
            "args": [
                "--disable-auth=true",
                "--insecure",
                "--repo-server-plaintext",
                "--dex-server-plaintext",
                "--dex-server",
                "http://localhost:5556",
                "--port",
                "8080",
                "--loglevel",
                "debug",
                "--redis",
                "localhost:6379",
                "--repo-server",
                "localhost:8081",
                "--otlp-address=''",
                "--application-namespaces=''",
            ],
        },
        {
            "name": "Debug repo-server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "./cmd",
            "env": {
                "ARGOCD_BINARY_NAME": "argocd-repo-server",
                "FORCE_LOG_COLORS": "3",
                "ARGOCD_FAKE_IN_CLUSTER": "true",
                "ARGOCD_TLS_DATA_PATH": "/tmp/argocd-local/tls",
                "ARGOCD_SSH_DATA_PATH": "/tmp/argocd-local/ssh",
                "ARGOCD_GNUPGHOME": "/tmp/argocd-local/gpg/keys",
                "ARGOCD_PLUGINSOCKFILEPATH": "./test/cmp",
                "ARGOCD_GPG_DATA_PATH": "/tmp/argocd-local/gpg/source",
            },
            "args": [
                "--port",
                "8081",
                "--loglevel",
                "debug",
                "--redis",
                "localhost:6379",
                "--otlp-address=''",
            ],
        },
        {
            "name": "Debug applicationset",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "./cmd",
            "env": {
                "ARGOCD_BINARY_NAME": "argocd-applicationset-controller",
                "FORCE_LOG_COLORS": "4",
                "ARGOCD_FAKE_IN_CLUSTER": "true",
                "ARGOCD_TLS_DATA_PATH": "/tmp/argocd-local/tls",
                "ARGOCD_SSH_DATA_PATH": "/tmp/argocd-local/ssh",
            },
            "args": [
                "--loglevel",
                "debug",
                "--argocd-repo-server",
                "localhost:8081",
                "--metrics-addr",
                "localhost:12345",
                "--probe-addr",
                "localhost:12346",
                "--webhook-addr",
                "localhost:7005"
            ],
        },
        {
            "name": "Debug notification",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "./cmd",
            "env": {
                "ARGOCD_BINARY_NAME": "argocd-notifications",
                "FORCE_LOG_COLORS": "5",
                "ARGOCD_FAKE_IN_CLUSTER": "true",
                "ARGOCD_TLS_DATA_PATH": "/tmp/argocd-local/tls",
                "ARGOCD_SSH_DATA_PATH": "/tmp/argocd-local/ssh",
            },
            "args": [
                "--loglevel",
                "debug",
            ],
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
        }
    ]
}
